import mongoose from 'mongoose';

const reviewSchema = new mongoose.Schema(
  {
    gigId: {
      type: 'string',
      required: true,
    },
    userId: {
      type: 'string',
      required: true,
    },
    star: {
      type: 'number',
      required: true,
      enum: [1, 2, 3, 4, 5],
    },
    desc: {
      type: 'string',
      required: true,
    },
  },
  {
    timestamps: true,
  }
);

export default mongoose.model('Review', reviewSchema);
